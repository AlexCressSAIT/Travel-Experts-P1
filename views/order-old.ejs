    <title>Order - Travel Experts</title>
    
    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/heroes/">

    <link type="text/css" href="/bootstrapexample.css" rel="stylesheet">
    
    <script>


        function validate()
        {
            document.getElementById("message").innerHTML = "";
            var form1 = document.forms[0];
            var message = "";

            if (form1.CustomerId.value == "")
            {
                message += "Customer ID must have a value";
                form1.CustomerId.focus();
            }

            if (form1.Password.value == "")
            {
                message += "Password must have a value";
                form1.Password.focus();
            }

            if (form1.TravellerAccount.value == "")
            {
                message += "Travel Account must have a value";
                form1.TravellerAccount.focus();
            }
            if (form1.CustNumber.value == "")
            {
                message += "This must have a number";
                form1.CustNumber.focus();
            }
            else
            {
                var reg = ^\d+$;
                if (!reg.test(form1.CustNumber.value))
                {
                    message += "Traveller Number has an invalid format";
                    form1.CustNumber.focus();
                }
            }

            if (message != "")
            {
                document.getElementById("message").innerHTML = message;
            }
            else
            {
                if (confirm("Form values are okay. Submit the form?"))
                {
                    form1.submit();
                }
            }
        }
    </script>
</head>
<body>
    <header>
        <%- include("partials/header"); %>
    </header>
    <%- title %>
    <br />      
    <%- desc %>
