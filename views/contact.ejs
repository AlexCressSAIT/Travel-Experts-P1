<!DOCTYPE html>
<html>

<head>
	<%- include("partials/head.ejs"); %>
	<title>Contact Us - Travel Experts</title>
	<link href="css/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<link href="css/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
	<header>
		<%- include("partials/header.ejs"); %>
	</header>
	<!-- Page title -->
	<div class="container">
	  
	  <div class="row">
	     <div class="col-md-4">
		 </div>
	     <div class="col-md-4">
		    <h1 style=" text-align: center; color:#34568B;">Agency Info:</h1> 
		 </div>
	     <div class="col-md-4">
		 </div>
	  </div>
	  
	</div>
	<!-- Main container -->
	<div class="container">
		<!-- Outer Loop -->
		<% for(i=0; i<agenciesTable.length; i++){ %>
			<!-- Variable declarations -->
			<% var row = agenciesTable[i][0] %> <!-- Table/row is assumed to not be empty/null -->
			<% var agncyAddress = row.AgncyAddress %>
			<% var agncyCity = row.AgncyCity %>
			<% var agncyProv = row.AgncyProv %>
			<% var agncyPostal = row.AgncyPostal %>
			<% var agncyCountry = row.AgncyCountry %>
			<% var agncyPhone = row.AgncyPhone %>
			<% var agncyFax = row.AgncyFax %>

			<!-- Display/format the agency information -->
			<div class="row" style=" padding:30px 20px;">
			    <div class="col-md-4"></div>
				<div class="col-md-4"  style=" box-shadow: 5px 5px 5px 5px #888888; text-align: center; background-color: #FFF3EA;">

					<h4><%- agncyCity %>, <%- agncyProv %></h4>
					<ol>
						<li><%- agncyAddress %></li>
						<li><%- agncyPostal %></li>
						<li><%- agncyProv %></li>
						<li><%- agncyPhone %></li>
					</ol>
				</div>
				<div class="col-md-4"></div>
			</div>
			<div class="row">
				<!-- Inner loop -->
				<% for(j=0; j<agenciesTable[i].length; j++){ %>
					<!-- Variable declarations -->
					<% var row1 = agenciesTable[i][j] %>
					<% var agtFirstName = row1.AgtFirstName %>
					<% var agtMiddleInitial = row1.AgtMiddleInitial %>
					<% var agtLastName = row1.AgtLastName %>
					<% var agtBusPhone = row1.AgtBusPhone %>
					<% var agtEmail = row1.AgtEmail %>
					<% var agtPosition = row1.AgtPosition %>
                    
                    <!-- Display/format each agent info -->
					<div class="col-md-3"  style=" padding:30px 20px; box-shadow: 3px 3px 3px 3px #888888;">
						<ol>
							<li><%- agtFirstName %></li>
							<li><%- agtMiddleInitial %></li>
							<li><%- agtLastName %></li>

							<li><%- agtBusPhone %></li>
							<li><%- agtEmail %></li>
							<li><%- agtPosition %></li>
						</ol>
					</div>
				<!-- End inner loop -->
				<% } %>
			</div>
		<!-- End outer loop -->
		<% } %>
	</div>
</body>

</html>

<footer>
		<%- include("partials/footer.ejs"); %>
</footer>