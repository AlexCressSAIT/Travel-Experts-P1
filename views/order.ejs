    <!--Bootstrap core CSS -->
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link type="text/css" href="/masterstyle.css" rel="stylesheet">
    <script>
      <!--function used to validate entries entered into the form on the order page, removed the regex functionality as the forms were drop down select type.  -->
      <!--validate function was having issues, and I never figured it out, not sure if it has to do with bootstrap-->
    function validate(){
      
				document.getElementById("message").innerHTML = "";
				var form1 = document.forms[0];
				var message = "";
				
				if (form1.CustomerId.value == "")
				{
					message += "Customer ID must have a value";
					form1.CustomerId.focus();
				}
        if (form1.Password.value == "")
				{
					message += "Password must have a value";
					form1.Password.focus();
				}
				if (form1.TripTypeId.value == "")
				{
					message += "Trip Type must have a value";
					form1.TripTypeId.focus();
				}
				
				if (form1.UserName.value == "")
				{
					message += "User Name Account must have a value";
					form1.UserName.focus();
				}
        if (form1.TravelerCount.value == "")
				{
					message += "This must have a number";
					form1.TravelerCount.focus();
				}
				
				
				if (message != "")
				{
					document.getElementById("message").innerHTML = message;
				}
				else
				{
					if (confirm("Form values are okay. Submit the form?"))
					{
						form1.submit();
					}
				}
			}
		</script>
    
    </head>
    <body>
    <!--header file which is the navbar plus the banner inserted here-->
      <header>
        <%- include("partials/header"); %>
      </header>
      
      <br />      
      
      
        <div class="container col-xxl-8 px-4 py-5">
          <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
            <div class="col-10 col-sm-8 col-lg-6">
	    
	    <!--code for the pics and the title, description displayed dynamically-->
              <%- "<img class='d-block mx-lg-auto img-fluid' src=images/" + thumb + ">" %>
              
              <%- '<h3 class="display-5 mb-3">' + title + '</h3>' %>
              <%- '<p class="lead mb-lg-5">' + desc + '</p>' %>
            </div>
            <div class="col-lg-6">
              <h3 class="display-5 mb-3">Billing Form</h3>
              <p class="lead mb-lg-5">Fill out the form to complete the transaction</p>

              <!-- post goes to the submit-order page-->
              <form method="post" action="/submit-order">
                <%- "<input type='hidden' name='pkgId' value=" + pkgId + " >" %>
                
                <div class = "row-cols-2">
                  <label for="CustomerId">User Name:</label>
                  <input type="text" name="CustomerId" id="CustomerId" /><br />
                </div>
                <div class = "col-md-10 mt-3"></div>
                
                 <label for="Password">Password:</label>
                  <input type="password" class="form-control" name="Password" id="Password"/><br />
                  <div class = "col-md-10 mt-3"></div>

                  <div class = "col-md-10 mt-3"></div>

                 

                  <div class = "col-md-10 mt-3"></div>



                  <div class = "col-md-10 mt-3"></div>

                  <div>

                    <label for="TripTypeId">Trip Type:</label>
