<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="OOSD Fall 2021">
    <meta name="author" content="RCook">
    <title>Travel Experts Order Form</title>
    
    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/heroes/">
        
    

    <!--Bootstrap core CSS -->
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link type="text/css" href="/bootstrapexample.css" rel="stylesheet">
    <script>
      
				
			function validate()
            {
				document.getElementById("message").innerHTML = "";
				var form1 = document.forms[0];
				var message = "";
				
				if (form1.CustomerId.value == "")
				{
					message += "Customer ID must have a value";
					form1.CustomerId.focus();
				}
				
				if (form1.Password.value == "")
				{
					message += "Password must have a value";
					form1.Password.focus();
				}
				
				if (form1.TravellerAccount.value == "")
				{
					message += "Travel Account must have a value";
					form1.TravellerAccount.focus();
				}
                if (form1.CustNumber.value == "")
				{
					message += "This must have a number";
					form1.CustNumber.focus();
				}
				else
				{
					var reg = ^\d+$;
					if (!reg.test(form1.CustNumber.value))
					{
						message += "Traveller Number has an invalid format";
						form1.CustNumber.focus();
					}
				}
				
				if (message != "")
				{
					document.getElementById("message").innerHTML = message;
				}
				else
				{
					if (confirm("Form values are okay. Submit the form?"))
					{
						form1.submit();
					}
				}
			}
		</script>
    
    </head>
    <body>
        <%- title %>
        <br />      
        <%- desc %>
        <div class="container col-xl-10 col-xxl-8 px-4 py-5">
            <div class="row align-items-center g-lg-5 py-5">
                <div class="col-md-10 mx-auto col-lg-5">
                    <h4 class="mb-3">Billing</h4>
                    
                    <!-- whatever you want to call the action -->
                <form method="post" action="/submit-order">
                    <label for="CustomerId">Customer ID:</label>
                    <input type="text" name="CustomerId" id="CustomerId" /><br />
                    
                    <label for="Password">Password:</label>
                    <input type="text" name="Password" /><br />
                    
                    <label for="TravellerAccount">Traveller Account:</label>
                    <input type="text" name="TravellerAccount" id="TravellerAccount" /><br />

                    <label for="CustNumber">Number of People:</label>
                    <input type="text" name="CustNumber" id="CustNumber" /><br />

                    <label for="PaymentMethod">Payment Method:</label>
                    <input type="text" name="PaymentMethod" id="PaymentMethod" /><br />

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                          Credit Card
                        </label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                        <label class="form-check-label" for="exampleRadios2">
                          Bank Payment
                        </label>
                      </div>

                      <button type="button" onclick="validate()">Send</button>
                    </form>
                </div>
                <div class="col-md-10 mx-auto col-lg-5">
                    <h4 class="mb-3">Booking Record</h4>
                
                </div>
            </div>
        </div>
    



        <div class= "container-md">
            <div class="row">
               <div class="col-md-8 col-lg-8">
                
                </div>
            </div>
        </div>


    </body>
</html>