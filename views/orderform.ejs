<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="OOSD Fall 2021">
    <meta name="author" content="RCook">
    <title>Travel Experts Order Form</title>
    
    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/heroes/">
        
    

    <!--Bootstrap core CSS -->
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link type="text/css" href="/masterstyle.css" rel="stylesheet">
    <script>
      
				
			function validate()
            {
				document.getElementById("message").innerHTML = "";
				var form1 = document.forms[0];
				var message = "";
				
				if (form1.CustomerId.value == "")
				{
					message += "Customer ID must have a value";
					form1.CustomerId.focus();
				}
				
				if (form1.Password.value == "")
				{
					message += "Password must have a value";
					form1.Password.focus();
				}
				
				if (form1.TravellerAccount.value == "")
				{
					message += "Travel Account must have a value";
					form1.TravellerAccount.focus();
				}
                if (form1.CustNumber.value == "")
				{
					message += "This must have a number";
					form1.CustNumber.focus();
				}
				else
				{
					var reg = ^\d+$;
					if (!reg.test(form1.CustNumber.value))
					{
						message += "Traveller Number has an invalid format";
						form1.CustNumber.focus();
					}
				}
				
				if (message != "")
				{
					document.getElementById("message").innerHTML = message;
				}
				else
				{
					if (confirm("Form values are okay. Submit the form?"))
					{
						form1.submit();
					}
				}
			}
		</script>
    
    </head>
    <body>
      <header>
        <%- include("header.ejs"); %>
      </header>

        <div class="container col-xxl-8 px-4 py-5">
          <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
            <div class="col-10 col-sm-8 col-lg-6">
              <img src="/assets/canyon.jpg" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
            </div>
            <div class="col-lg-6">
              <h3 class="display-5 mb-3">Billing Form</h3>
              <p class="lead mb-lg-5">Fill out the form to complete the transaction</p>

              <!-- whatever you want to call the action -->
              <form method="post" action="/customerform">
                <div class = "row-cols-2"
                  <label for = "CustomerId">Customer ID:</label>
                  <input type="text" name="CustomerId" id="CustomerId" /><br />
                </div>
                <div class = "col-md-10 mt-3"></div>
                
                  <label for="Password">Password:</label>
                  <input type="text" name="Password" id="Password"/><br />
                  <div class = "col-md-10 mt-3"></div>

                  
                  <label for="TravellerAccount">Traveller Account:</label>
                  <input type="text" name="TravellerAccount" id="TravellerAccount"/><br />
                
                  <div class = "col-md-10 mt-3"></div>

                  <label for="CustNumber">Number of People:</label>
                  <input type="text" name="CustNumber" id="CustNumber" /><br />

                  <div class = "col-md-10 mt-3"></div>

                  <label for="PaymentMethod">Payment Method:</label>
                  <input type="text" name="PaymentMethod" id="PaymentMethod" /><br />

                  <div class = "col-md-10 mt-3"></div>

                  <div class="form-check mt-2 mb-2">
                      <input class="form-check-input" type="radio" name="PaymentMethod1" id="PaymentMethod1" value="option1" checked>
                      <label class="form-check-label" for="PaymentMethod1">Credit Card</label>
                  </div>
                  <div class="form-check mb-4">
                      <input class="form-check-input" type="radio" name="PaymentMethod2" id="PaymentMethod2" value="option2">
                      <label class="form-check-label" for="PaymentMethod2">Bank Payment</label>
                  </div>

                      <div class="d-grid gap-4 d-md-flex justify-content-md-start">
                        <button type="button" onclick="validate()" class="btn btn-primary btn-lg px-4 me-md-2">Send</button>
                        <button type="reset" class="btn btn-outline-secondary btn-lg px-4" onclick="return confirm('did you really want to reset?');">Reset</button>
                      </div>
                  </form>
            </div>
          </div>
        </div>
      


    </body>
    <footer>
			
      <%- include("footer.ejs"); %>
    </footer>
</html>